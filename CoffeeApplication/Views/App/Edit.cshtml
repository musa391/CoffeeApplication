@model CoffeeApplication.Models.App

@{
    ViewData["Title"] = "Kahve Düzenle";
}

<h2>Kahve Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Kahve Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="material">Malzemeler</label>
        <input asp-for="material" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
</form>















