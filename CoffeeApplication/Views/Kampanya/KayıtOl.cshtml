

@{
    ViewData["Title"] = "Kampanya Kaydı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Kampanya Bildirimleri İçin Kayıt Ol</h2>

            <!-- Başarı Mesajı -->
            @if (TempData["Basarili"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Basarili"]
                </div>
            }

            <!-- Hata Mesajı -->
            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Hata"]
                </div>
            }

            <form asp-controller="Kampanya" asp-action="KayitOl" method="post">
                <div class="mb-3">
                    <label for="eposta" class="form-label">E-posta Adresiniz</label>
                    <input type="email" class="form-control" id="eposta" name="eposta" placeholder="ornek@eposta.com" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            </form>

            <p class="mt-3 text-muted text-center">
                Kaydınız sadece kampanya bildirimleri için kullanılacaktır.
            </p>
        </div>
    </div>
</div>
