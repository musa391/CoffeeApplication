

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Brewly - @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="Kahve, Coffee, Cafe, Espresso" />
    <meta name="description" content="Brewly Kahve Uygulaması" />

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- Owl Carousel CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" rel="stylesheet" />

    <!-- Tempus Dominus CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/style.min.css" rel="stylesheet" />
</head>

<body>
    <!-- Navbar Start -->
    <div class="container-fluid p-0 nav-bar">

        

        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand px-lg-4 m-0">
                <h1 class="m-0 display-4 text-uppercase text-white">Brewly</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4">

                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    <a class="nav-item nav-link" asp-controller="About" asp-action="Index">Hakkımızda</a>
                    <a class="nav-item nav-link" asp-controller="Service" asp-action="Index">Hizmetlerimiz</a>
                    <a class="nav-item nav-link" asp-controller="Menu" asp-action="Index">Menü</a>
					<a class="nav-item nav-link" asp-controller="App" asp-action="Index">Kendin Tasarla!</a>
					<a class="nav-item nav-link" asp-controller="Contact" asp-action="Index">İletişim</a>
                    
                       
                 
                   

                    

                   

                </div>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5">
        <div id="blog-carousel" class="carousel slide overlay-bottom" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">Deneyim ve kaliteyle hizmetinizde</h2>
                        <h1 class="display-1 text-white m-0">COFFEE</h1>
                        <h2 class="text-white m-0">* SINCE 2011 *</h2>
                        <h3 class="text-warning">@ViewData["Title"]</h3>
                    </div>
                </div>
            
            <a class="carousel-control-prev" href="#blog-carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#blog-carousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
  
   
  
    <!-- Kampanya End -->

    <main>
        @RenderBody()
    </main>

    <!-- Footer Start -->
    <div class="container-fluid footer text-white mt-5 pt-5 px-0 position-relative overlay-top">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4 col-md-12 mb-5">
                    <h4 class="text-primary mb-4">Brewly</h4>
                    <p>Brewly ile kahve deneyiminizi yeniden keşfedin. Lezzetli kahvelerimiz ve sıcak ortamımız ile her zaman yanınızdayız.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-5">
                    <h4 class="text-primary mb-4">Hızlı Linkler</h4>
                    <div class="d-flex flex-column">
                        <a class="text-white mb-2" asp-controller="Home" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Ana Sayfa</a>
                        <a class="text-white mb-2" asp-controller="About" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Hakkımızda</a>
                        <a class="text-white mb-2" asp-controller="Service" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Hizmetlerimiz</a>
                        <a class="text-white mb-2" asp-controller="Menu" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Menü</a>
                        <a class="text-white" asp-controller="Contact" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>İletişim</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-5">
                    <h4 class="text-primary mb-4">İletişim</h4>
                    <p><i class="fa fa-map-marker-alt mr-2"></i>İstanbul, Türkiye</p>
                    <p><i class="fa fa-envelope mr-2"></i>info@Brewly.com</p>
                    <p><i class="fa fa-phone-alt mr-2"></i>+90 555 555 55 55</p>
                </div>
            </div>
        </div>
        <div class="container-fluid text-center py-4 border-top border-secondary">
            <p class="m-0">&copy; 2025 Brewly Tüm Hakları Saklıdır.</p>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.41/moment-timezone.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
